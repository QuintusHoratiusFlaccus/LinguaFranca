{
    "useTabs": false,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "semi": true,
    "importOrder": [
        "^@app/(.*)$",
        "^@pages/(.*)$",
        "^@widgets/(.*)$",
        "^@features/(.*)$",
        "^@entities/(.*)$",
        "^@shared/(.*)$",
        "^../",
        "^./"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": ["typescript", "jsx"],
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
